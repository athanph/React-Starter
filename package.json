{
	"name": "react-starter",
	"version": "1.0.0",
	"description": "React Starter Kit",
	"keywords": [
		"react",
		"starter-kit",
		"webpack",
		"babel",
		"postcss"
	],
	"license": "MIT",
	"homepage": "https://github.com/athanph/React-Starter",
	"bugs": {
		"email": "someone@example-developer.com",
		"url": "https://github.com/athanph/React-Starter/issues"
	},
	"author": {
		"name": "Jonathan Manas",
		"email": "jonathan.manas@codeandtheory.com",
		"url": "https://github.com/athanph/React-Starter"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/athanph/React-Starter.git"
	},
	"private": true,
	"main": "index.js",
	"scripts": {
		"start": "webpack-dev-server --hot ",
		"build": "webpack --env production --progress",
		"prettier": "prettier --write src/**/*.js",
		"lint": "eslint --debug src/",
		"lint:fix": "eslint --debug src/ --fix",
		"lint:styled": "stylelint './src/**/*.js'",
		"lint:styled:fix": "stylelint './src/**/*.js' --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.(js|jsx)": [
			"npm run lint:fix",
			"npm run lint:styled:fix",
			"git add"
		]
	},
	"browserslist": [
		"last 1 version",
		"> 1%",
		"maintained node versions",
		"not dead"
	],
	"devDependencies": {
		"@babel/core": "^7.1.2",
		"@babel/plugin-proposal-class-properties": "^7.1.0",
		"@babel/plugin-syntax-dynamic-import": "^7.0.0",
		"@babel/preset-env": "^7.1.0",
		"@babel/preset-react": "^7.0.0",
		"autoprefixer": "^9.3.1",
		"babel-eslint": "^10.0.1",
		"babel-jest": "^23.6.0",
		"babel-loader": "^8.0.4",
		"babel-plugin-macros": "^2.4.2",
		"clean-webpack-plugin": "^0.1.19",
		"css-loader": "^1.0.0",
		"eslint": "^5.7.0",
		"eslint-loader": "^2.1.1",
		"eslint-plugin-jsx-a11y": "^6.1.2",
		"eslint-plugin-prettier": "^3.0.0",
		"eslint-plugin-react": "^7.11.1",
		"file-loader": "^2.0.0",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^1.1.2",
		"jest": "^23.6.0",
		"jest-dom": "^2.1.0",
		"lint-staged": "^8.0.2",
		"mini-css-extract-plugin": "^0.4.4",
		"optimize-css-assets-webpack-plugin": "^5.0.1",
		"postcss": "^7.0.5",
		"postcss-extend": "^1.0.5",
		"postcss-hexrgba": "^1.0.1",
		"postcss-import": "^12.0.1",
		"postcss-loader": "^3.0.0",
		"postcss-mixins": "^6.2.0",
		"postcss-nested": "^4.1.0",
		"postcss-nested-ancestors": "^2.0.0",
		"postcss-simple-vars": "^5.0.1",
		"prettier": "^1.14.3",
		"purgecss-webpack-plugin": "^1.3.1",
		"react-test-renderer": "^16.6.0",
		"react-testing-library": "^5.2.3",
		"resolve-url-loader": "^3.0.0",
		"simple-progress-webpack-plugin": "^1.1.2",
		"style-loader": "^0.23.1",
		"stylelint": "^9.7.0",
		"stylelint-config-recommended": "^2.1.0",
		"stylelint-config-styled-components": "^0.1.1",
		"stylelint-processor-styled-components": "^1.5.0",
		"stylelint-webpack-plugin": "^0.10.5",
		"tailwind.macro": "^0.5.10",
		"terser-webpack-plugin": "^1.1.0",
		"url-loader": "^1.1.2",
		"webapp-webpack-plugin": "^2.3.1",
		"webpack": "^4.23.1",
		"webpack-cli": "^3.1.2",
		"webpack-dev-server": "^3.1.10",
		"webpack-merge": "^4.1.4"
	},
	"dependencies": {
		"react": "^16.6.0",
		"react-dom": "^16.6.0",
		"react-loadable": "^5.5.0",
		"react-router-dom": "^4.3.1",
		"styled-components": "^4.0.2",
		"tailwindcss": "^0.7.0"
	}
}

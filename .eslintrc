{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"commonjs": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["jsx-a11y", "react", "prettier"],
	"extends": ["eslint:recommended", "plugin:jsx-a11y/recommended", "plugin:react/recommended"],
	"settings": {
		"react": {
			"pragma": "React",
			"version": "16.6"
		}
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "never"],
		"key-spacing": 2,
		"keyword-spacing": 2,
		"object-curly-spacing": ["error", "always"],
		"arrow-parens": [
			"error",
			"as-needed",
			{
				"requireForBlockBody": false
			}
		],
		"prettier/prettier": ["error"]
	}
}
